[
  {
    "id": "cal_com",
    "name": "Cal.com",
    "type": "calendar",
    "base_url": "https://api.cal.com/v1/",
    "endpoints": {
      "availability": {
        "path": "/availability",
        "method": "POST",
        "request_map": {
          "start": "start",
          "end": "end"
        },
        "response_map": {
          "slots": "slots"
        }
      },
      "bookings": {
        "path": "/bookings",
        "method": "POST",
        "request_map": {
          "user": "user",
          "time": "time"
        },
        "response_map": {
          "booking_id": "id"
        }
      }
    },
    "auth": {
      "mode": "bearer",
      "token_env": "CAL_COM_API_KEY"
    },
    "modules_using": [
      "module_02_core_v2",
      "module_07_enterprise_intake"
    ],
    "mock_data": {
      "availability": "/data/Aigent_Modules_Core/mocks/cal_com_availability.json",
      "bookings": "/data/Aigent_Modules_Core/mocks/cal_com_bookings.json"
    },
    "schema_path": "/data/Aigent_Modules_Core/schemas/calendar_availability.schema.json"
  },

  {
    "id": "stripe",
    "name": "Stripe Payments",
    "type": "payment",
    "base_url": "https://api.stripe.com/v1/",
    "endpoints": {
      "charge": {
        "path": "/charges",
        "method": "POST",
        "request_map": {
          "amount": "amount",
          "currency": "currency",
          "customer": "customer",
          "description": "description"
        },
        "response_map": {
          "charge_id": "id",
          "status": "status",
          "receipt_url": "receipt_url"
        }
      },
      "refund": {
        "path": "/refunds",
        "method": "POST",
        "request_map": {
          "charge_id": "charge_id",
          "amount": "amount"
        },
        "response_map": {
          "refund_id": "id",
          "status": "status"
        }
      }
    },
    "auth": {
      "mode": "bearer",
      "token_env": "STRIPE_API_KEY"
    },
    "modules_using": [
      "module_04_payments",
      "module_10_enterprise_billing"
    ],
    "mock_data": {
      "charge": "/data/Aigent_Modules_Core/mocks/stripe_charge.json",
      "refund": "/data/Aigent_Modules_Core/mocks/stripe_charge.json"
    },
    "schema_path": "/data/Aigent_Modules_Core/schemas/payment_charge.schema.json"
  },

  {
    "id": "twilio",
    "name": "Twilio Messaging",
    "type": "messaging",
    "base_url": "https://api.twilio.com/2010-04-01/Accounts/{{$env.TWILIO_ACCOUNT_SID}}/",
    "endpoints": {
      "sms": {
        "path": "/Messages.json",
        "method": "POST",
        "request_map": {
          "To": "to",
          "From": "from",
          "Body": "message"
        },
        "response_map": {
          "message_id": "sid",
          "status": "status"
        }
      }
    },
    "auth": {
      "mode": "apiKey",
      "key_env": "TWILIO_API_KEY"
    },
    "modules_using": [
      "module_03_notifications",
      "module_08_enterprise_alerts"
    ],
